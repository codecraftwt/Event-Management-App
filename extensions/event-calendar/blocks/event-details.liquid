{% schema %}
{
  "name": "Event Details",
  "target": "section",
  "settings": []
}
{% endschema %}

<style>
  /* CSS Variables for theming */
  :root {
    --primary-color: #2563eb;
    --text-color: #1f2937;
    --bg-color: #ffffff;
    --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --border-radius: 8px;
    --transition: all 0.2s ease;
  }

  .event-details-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
  }

  .event-details-card {
    background: var(--bg-color);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: 2rem;
    border: 1px solid #e5e7eb;
  }

  .event-details-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .event-details-image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    margin-bottom: 1.5rem;
    object-fit: cover;
  }

  .event-details-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .event-details-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .event-details-meta-label {
    font-weight: 600;
    color: var(--text-color);
    min-width: 60px;
  }

  .event-details-meta-value {
    color: #6b7280;
  }

  .event-details-description {
    line-height: 1.6;
    color: #374151;
  }

  .loading-text {
    text-align: center;
    color: #6b7280;
    font-size: 1.125rem;
  }

  .error-text {
    text-align: center;
    color: #dc2626;
    font-size: 1.125rem;
  }
</style>

<div class="event-details-container">
  <div id="event-detail" class="event-details-card">
    <p class="loading-text">Loading event details...</p>
  </div>
</div>

<script defer>
(async () => {
  const container = document.getElementById('event-detail');

  // Get event_id from query string
  const urlParams = new URLSearchParams(window.location.search);
  const eventId = urlParams.get("event_id");

  try {
    const response = await fetch("https://event-management-app-qcwd.onrender.com/api/events");
    const events = await response.json();
    const event = events.find(e => e.id == eventId);

    if (!event) {
      container.innerHTML = '<p class="error-text">Event not found.</p>';
      return;
    }

    container.innerHTML = `
      <h1 class="event-details-title">${event.title}</h1>
      <img src="${event.image}" alt="${event.title}" class="event-details-image" width="800" height="400">
      <div class="event-details-meta">
        <div class="event-details-meta-item">
          <span class="event-details-meta-label">Place:</span>
          <span class="event-details-meta-value">${event.place}</span>
        </div>
        <div class="event-details-meta-item">
          <span class="event-details-meta-label">Tag:</span>
          <span class="event-details-meta-value">${event.tag}</span>
        </div>
        <div class="event-details-meta-item">
          <span class="event-details-meta-label">Date:</span>
          <span class="event-details-meta-value">${new Date(event.date).toLocaleDateString()} ${event.time || ''}</span>
        </div>
      </div>
      <div class="event-details-description">
        <strong>Description:</strong> ${event.description}
      </div>
    `;
  } catch (err) {
    console.error(err);
    container.innerHTML = '<p class="error-text">Failed to load event.</p>';
  }
})();
</script>
